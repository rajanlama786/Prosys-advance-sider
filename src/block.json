{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "pt-simple-slider/pt-simple-slider",
    "version": "0.1.0",
    "title": "Simple Slider",
    "category": "widgets",
    "icon": "smiley",
    "description": "Example static block scaffolded with Create Block tool.",
    "textdomain": "pt-simple-slider",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "attributes": {
      "slides": {
        "type": "array",
        "default": [{
          "slideID": {
            "type": "number",
            "default": ""
          },
          "mediaID": {
            "type": "number",
            "default": ""
          },
          "mediaUrl": {
            "type": "string",
            "default": "#"
          },
          "title": {
            "type": "string",
            "default": ""
          },
          "content": {
            "type": "string",
            "default": ""
          },
          "buttonText": {
            "type": "string",
            "default": "Read More"
          },
          "buttonUrl": {
            "type": "string",
            "default": "#"
          },
          "buttonText2": {
            "type": "string",
            "default": "Read More"
          },
          "buttonUrl2": {
            "type": "string",
            "default": "#"
          }
        }]
      }
    },
  "usesContext": [
    "postId",
    "queryId"
  ],
  "supports": {
    "anchor": true
  }
}